<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.kit.ksri.paperfinder.controller.Controller">
   <left>
      <Accordion fx:id="accordion" BorderPane.alignment="CENTER">
        <panes>
          <TitledPane fx:id="searchPane" expanded="true" text="Search">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <TextField fx:id="searchText" layoutX="14.0" layoutY="14.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Search for" />
                         <Button layoutX="14.0" layoutY="50.0" mnemonicParsing="false" onAction="#performSearch" text="Search" />
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="filterPane" expanded="false" text="Filter">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <DatePicker layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="163.0" />
                        <DatePicker layoutX="14.0" layoutY="51.0" prefHeight="26.0" prefWidth="163.0" />
                     </children></AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="exportPane" expanded="false" text="Export">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="17.0" layoutY="68.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="163.0" text="Download Papers" />
                        <Separator layoutX="19.0" layoutY="54.0" prefHeight="3.0" prefWidth="163.0" />
                        <Button layoutX="88.0" layoutY="14.0" mnemonicParsing="false" text="Export Table" />
                        <ChoiceBox layoutX="19.0" layoutY="14.0" prefHeight="26.0" prefWidth="59.0" />
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
        </panes>
      </Accordion>
   </left>
   <center>
      <TableView fx:id="resultsTableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="titleCol" editable="false" prefWidth="75.0" text="Title" />
          <TableColumn fx:id="authorCol" editable="false" prefWidth="75.0" text="Author" />
            <TableColumn fx:id="citationsCol" editable="false" prefWidth="75.0" text="Citations" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <Label fx:id="status" maxWidth="1.7976931348623157E308" style="-fx-background-color: #ddd;" text="Please enter a search string and start searching for papers" BorderPane.alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="3.0" left="7.0" right="5.0" top="3.0" />
         </padding>
      </Label>
   </bottom>
</BorderPane>
