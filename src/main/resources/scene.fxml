<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.kit.ksri.paperfinder.controller.Controller">
   <left>
      <Accordion fx:id="accordion" BorderPane.alignment="CENTER">
        <panes>
          <TitledPane fx:id="searchPane" expanded="true" text="%search">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <TextField fx:id="searchText" layoutX="14.0" layoutY="14.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="%search.placeholder" />
                         <Button layoutX="14.0" layoutY="50.0" mnemonicParsing="false" onAction="#performSearch" text="%search.button" />
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="filterPane" expanded="false" text="%filter">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="14.0" layoutY="14.0" text="%filter.yearLow" />
                        <TextField layoutX="14.0" layoutY="33.0" prefHeight="26.0" prefWidth="75.0" />
                        <Label layoutX="110.0" layoutY="14.0" text="%filter.yearHigh" />
                        <TextField layoutX="110.0" layoutY="33.0" prefHeight="26.0" prefWidth="75.0" />
                        <Label layoutX="14.0" layoutY="69.0" text="%filter.citesLow" />
                        <TextField layoutX="14.0" layoutY="88.0" prefHeight="26.0" prefWidth="75.0" />
                        <Label layoutX="110.0" layoutY="69.0" text="%filter.citesHigh" />
                        <TextField layoutX="110.0" layoutY="88.0" prefHeight="26.0" prefWidth="75.0" />
                        <CheckBox layoutX="14.0" layoutY="129.0" mnemonicParsing="false" text="%filter.onlyPDF" />
                     </children></AnchorPane>
            </content>
          </TitledPane>
          <TitledPane fx:id="exportPane" expanded="false" text="%export">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="17.0" layoutY="68.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="163.0" text="%export.downloadButton" />
                        <Separator layoutX="19.0" layoutY="54.0" prefHeight="3.0" prefWidth="163.0" />
                        <Button layoutX="88.0" layoutY="14.0" mnemonicParsing="false" text="%export.exportButton" />
                        <ChoiceBox layoutX="19.0" layoutY="14.0" prefHeight="26.0" prefWidth="59.0" />
                     </children>
                  </AnchorPane>
            </content>
          </TitledPane>
        </panes>
      </Accordion>
   </left>
   <center>
      <TableView fx:id="resultsTableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="titleCol" editable="false" prefWidth="100.0" text="%column.title" />
          <TableColumn fx:id="authorCol" editable="false" prefWidth="75.0" text="%column.author" />
            <TableColumn fx:id="yearPublishedCol" prefWidth="50.0" sortType="DESCENDING" text="%column.yearPublished" />
            <TableColumn fx:id="citationsCol" editable="false" prefWidth="50.0" sortType="DESCENDING" text="%column.citations" />
            <TableColumn fx:id="publicationCol" prefWidth="75.0" text="%column.publication" />
            <TableColumn fx:id="sourceCol" prefWidth="75.0" text="%column.source" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <Label fx:id="status" maxWidth="1.7976931348623157E308" style="-fx-background-color: #ddd;" text="%status.default" BorderPane.alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="3.0" left="7.0" right="5.0" top="3.0" />
         </padding>
      </Label>
   </bottom>
   <top>
      <MenuBar fx:id="menubar" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="%menu.file">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%menu.edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="%menu.view">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="%menu.help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
